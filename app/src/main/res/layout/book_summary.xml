<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/thumbnailHolder"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent">

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/bookSummaryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Title"
        app:layout_constraintStart_toEndOf="@+id/thumbnailHolder"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/bookSummaryAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Author"
        app:layout_constraintStart_toEndOf="@+id/thumbnailHolder"
        app:layout_constraintTop_toBottomOf="@+id/bookSummaryTitle" />

    <RatingBar
        android:id="@+id/bookSummaryRatingBar"
        style="@android:style/Widget.Material.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/thumbnailHolder"
        app:layout_constraintTop_toBottomOf="@+id/bookSummaryAuthor" />

</android.support.constraint.ConstraintLayout>